<!DOCTYPE html>
<html >
  <head>
    <meta charset="UTF-8">
    <title>angularjs ng-repeat pagination</title>
    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div ng-app="myApp" ng-controller="MyCtrl">
      <input ng-model="q" id="search" class="form-control" placeholder="Filter text">
      <select ng-model="pageSize" id="pageSize" class="form-control">
        <option value="5">5</option>
        <option value="10">10</option>
        <option value="15">15</option>
        <option value="20">20</option>
      </select>
      <ul>
        <li ng-repeat="item in data | filter:q | startFrom:currentPage*pageSize | limitTo:pageSize">
          [{{item.code}}] - <a href="{{item.url}}">{{item.title}}</a>
        </li>
      </ul>
      <button id="prev" ng-disabled="currentPage == 0" ng-click="prevPage()">
      Previous
      </button>
      {{currentPage+1}}/{{numberOfPages()}}
      <button id="next" ng-disabled="currentPage >= getData().length/pageSize - 1" ng-click="nextPage()">
      Next
      </button>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.0/angular.min.js'></script>
    <script src="/js/index.js"></script>
  </body>
</html>
